{
  "extends": "@realitas/ts-config/tsconfig.next.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@contexts/*": ["contexts/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
